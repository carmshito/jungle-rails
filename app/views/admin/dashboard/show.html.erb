<section class="admin-dashboard-index">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="panel panel-default dashboard">

    <table class="table table-bordered table-hover">
      <tr>
        <th scope="row">
          <a href="/admin/products" class="row clickable link-dark">
            <strong>Product count:</strong>
          </a>
        </th>
        <td>
          <%= @product_count %>
        </td> 
      </tr>
      <tr>
        <th scope="row">
          <a href="/admin/categories" class="row clickable link-dark">
            <strong>Category count:</strong>
          </a>
        </th>
        <td>
          <%= @category_count %>
        </td> 
      </tr>
    </table>
  
  </div>

</section>
