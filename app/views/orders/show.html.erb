<section class="orders-show">

  <header class="page-header">
    <h1>Order Summary</h1>
  </header>


  <div class="panel panel-default items">
  <h2>Order  # <%= @order.id %></h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |line_item| %>
            <tr>
              <td><%= image_tag line_item.product.image.url, class: "order-item-image" %></td>
              <td>
                <strong><%= line_item.product.name %></strong><br>
                <%= line_item.product.description %>
              </td>
              <td><%= line_item.quantity %></td>
              <td>$<%= line_item.total_price %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">
              TOTAL:
            </th>
            <th>
              $<%= @order.total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  
    <div>
    <p><strong>Order Total:</strong> $<%= @order.total %></p>
    <p><strong>Email:</strong> <%= @order.email %></p>
  </div>

  <div class="order-summary jumbotron">
    <h4>Thank you for shopping at Jungle!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-success' %>

</section>
